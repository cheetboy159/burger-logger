<h1>burgers!</h1>



<ul>
  {{#each burgers}}
    {{#unless sleepy}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>burgers that are eaten</h2>

<ul>
  {{#each burgers}}
    {{#if sleepy}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Add burger</button>
</form>
